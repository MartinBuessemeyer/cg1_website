{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "module": "commonjs",
        "noImplicitAny": true,
        "alwaysStrict": true,
        //."noUnusedLocals": true,
        "strictNullChecks": true,
        "outDir": "./dist",
        "preserveConstEnums": true,
        "removeComments": false,
        "sourceMap": true,
        "target": "ES2020",
        "experimentalDecorators": true
    },
    "include": ["./src/**/*"]
}
