{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["standard"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["@typescript-eslint"],
    "rules": {
        "indent": ["error", 4],
        "semi": ["error", "always"],
        "no-extra-semi": ["error"],
        "func-call-spacing": ["error"],
        "block-spacing": ["error", "always"],
        "space-before-function-paren": ["error", "always"]
    }
}
